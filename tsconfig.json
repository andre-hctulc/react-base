{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "../../../../../packages/progress-controller/src/controller.ts",
        "../../components/view/page-header-tabs.tsx"
    ],
    "exclude": ["demo"]
}
