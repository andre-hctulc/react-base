{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["demo", "**/json-editor"]
}
