{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true
    },
    "include": ["src/**/*"],
    "exclude": ["demo"]
}
