{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src/**/*"]
}
